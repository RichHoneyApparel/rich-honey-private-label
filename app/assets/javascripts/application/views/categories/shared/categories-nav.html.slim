.categories-nav-bar[layout='row' layout-wrap layout-align='center end']
  a[aria-label='categories-button' name='men' value='men' ui-sref="categories_men" flex='10' flex-sm='50' flex-xs='25' style='padding: 10px 0; margin: 0;']
    .logo-container[layout='column' layout-align='end center']
      img[class='men-logo' ng-src='assets/categories-mens.png' ng-if="!path.includes('/men')"]
      img[class='men-logo' ng-src='assets/categories-mens-active.png' ng-if="path.includes('/men')"]
      span[style='padding: 5px 0; font-size: 8px;' ng-class="{'active-text': path.includes('/men'), 'inactive-text': !path.includes('/men')}"] Men's
