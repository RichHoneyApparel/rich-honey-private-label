.categories-nav-bar[layout='row' layout-wrap layout-align='space-around center']
  md-button[aria-label='categories-button' name='men' value='men' ng-click='goto("categories_men")' flex='20' flex-xs='5' style='padding-top: 10px; margin: 0;']
    .logo-container[layout='column' layout-align='end center']
      img[ng-src='assets/categories-mens.png' ng-if="!path.includes('/men')"]
      img[ng-src='assets/categories-mens-active.png' ng-if="path.includes('/men')"]
      span[style='font-size: 8px; margin-top: -10px;'] Men's
  md-button[aria-label='categories-button' name='women' value='women' ng-click='goto("categories_women")' flex='20' flex-xs='5' style='padding-top: 10px; margin: 0;']
    .logo-container[layout='column' layout-align='end center']
      img[ng-src='assets/categories-womens.png' ng-if="!path.includes('/women')"]
      img[ng-src='assets/categories-womens-active.png' ng-if="path.includes('/women')"]
      span[style='font-size: 8px; margin-top: -10px;'] Women's
  md-button[aria-label='categories-button' name='accessories' value='accessories' ng-click='goto("categories_accessories")' flex='20' flex-xs='5' style='padding-top: 10px; margin: 0;']
    .logo-container[layout='column' layout-align='end center']
      img[ng-src='assets/categories-accessories.png' ng-if="!path.includes('accessories')"]
      img[ng-src='assets/categories-accessories-active.png' ng-if="path.includes('accessories')"]
      span[style='font-size: 8px; margin-top: -10px;'] Accessories
  md-button[aria-label='categories-button' name='activewear' value='activewear' ng-click='goto("categories_activewear")' flex='20' flex-xs='5' style='padding-top: 10px; margin: 0;']
    .logo-container[layout='column' layout-align='space-between center']
      img[ng-src='assets/categories-activewear.png' ng-if="!path.includes('activewear')" style='padding-bottom: 22px;']
      img[ng-src='assets/categories-activewear-active.png' ng-if="path.includes('activewear')" style='padding-bottom: 22px;']
      span[style='font-size: 8px; margin-top: -10px;'] Fitness
  /md-button[aria-label='categories-button' name='honeyStudio' value='honeyStudio' md-nav-click='goto("home")' flex='20' layout-fill]
    .logo-container[layout='column' layout-align='end center']
      img[ng-src='assets/categories-custom.png']
      span[style='font-size: 8px; margin-top: -10px;'] Custom
