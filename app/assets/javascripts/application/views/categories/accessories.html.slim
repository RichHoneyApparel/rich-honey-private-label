.categories-accessories-container
  .header[ng-include src="'application/views/categories/shared/categories-nav.html'" ng-controller='CategoriesNavController']
  .categories-accessories-header[layout='row' layout-align='start center']
    .header-text[flex='33' flex-md='45' flex-sm='50' flex-xs='65']
      h1.md-display-1
        span ACCES
        | SORIES
      p Our premium custom accessories and leather goods are handmade in
        Los Angeles by a passionate team of craftsmen.
  .categories-accessories-body[layout='row' layout-wrap]
    .mens-section[layout='column' style='padding: 20px;']
      .item-container[layout='row' layout-wrap]
        .product-container[ng-repeat='m in product' flex-md='25' flex-sm='33' flex-xs='50' flex='25' layout='column' layout-align='center center' style='text-align: center; padding: 30px;' ng-click='goToProduct(m.id)']
          img[ng-src='{{ m.product_img[0].url }}' style='padding-bottom: 10px;' max-height='200px' max-width='200px']
          span {{ m.name }}
