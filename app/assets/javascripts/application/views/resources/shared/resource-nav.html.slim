    .logo-container[layout='column' layout-align='center center']
      img[ng-src='assets/fabric.PNG' ng-if="!path.includes('fabrics')" width='61' height='61']
      img[ng-src='assets/fabric-active.PNG' ng-if="path.includes('fabrics')" width='61' height='61']
